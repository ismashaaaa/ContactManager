@model IEnumerable<ContactManager.Application.DTOs.Contacts.ContactDto>
@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-address-book me-2"></i>Contact Management
    </h1>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Add New Contact
        </a>
        <a asp-action="Upload" class="btn btn-primary ms-2">
            <i class="fas fa-upload me-1"></i>Upload CSV
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filters</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label for="nameFilter" class="form-label">Name</label>
                <input type="text" class="form-control" id="nameFilter" placeholder="Search by name...">
            </div>
            <div class="col-md-3">
                <label for="marriedFilter" class="form-label">Marital Status</label>
                <select class="form-select" id="marriedFilter">
                    <option value="">All</option>
                    <option value="true">Married</option>
                    <option value="false">Single</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="minSalary" class="form-label">Min Salary</label>
                <input type="number" class="form-control" id="minSalary" placeholder="" step="1000" min="0">
            </div>
            <div class="col-md-3">
                <label for="maxSalary" class="form-label">Max Salary</label>
                <input type="number" class="form-control" id="maxSalary" placeholder="" step="1000" min="0">
            </div>
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-secondary" id="clearFilters">
                <i class="fas fa-times me-1"></i>Clear Filters
            </button>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="contactsTable">
                    <thead class="table-dark">
                        <tr>
                            <th class="sortable" data-column="name">
                                Name <i class="fas fa-sort"></i>
                            </th>
                            <th class="sortable" data-column="dateOfBirth">
                                Date of Birth <i class="fas fa-sort"></i>
                            </th>
                            <th>Age</th>
                            <th class="sortable" data-column="married">
                                Married <i class="fas fa-sort"></i>
                            </th>
                            <th class="sortable" data-column="phone">
                                Phone <i class="fas fa-sort"></i>
                            </th>
                            <th class="sortable" data-column="salary">
                                Salary <i class="fas fa-sort"></i>
                            </th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            <tr data-contact-id="@contact.Id">
                                <td class="editable" data-field="name" data-original="@contact.Name">
                                    @contact.Name
                                </td>
                                <td class="editable" data-field="dateOfBirth" data-original="@contact.DateOfBirth.ToString("yyyy-MM-dd")">
                                    @contact.DateOfBirth.ToString("MMM dd, yyyy")
                                </td>
                                <td>
                                    @((DateTime.Now.Year - contact.DateOfBirth.Year - (DateTime.Now.DayOfYear < contact.DateOfBirth.DayOfYear ? 1 : 0)))
                                </td>
                                <td class="editable" data-field="married" data-original="@contact.Married.ToString().ToLower()">
                                    @(contact.Married ? "Yes" : "No")
                                </td>
                                <td class="editable" data-field="phone" data-original="@contact.Phone">
                                    @contact.Phone
                                </td>
                                <td class="editable" data-field="salary" data-original="@contact.Salary">
                                    @contact.Salary.ToString("C")
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-success save-btn d-none" title="Save">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary cancel-btn d-none" title="Cancel">
                                            <i class="fas fa-times"></i>
                                        </button>
                                        <a href="@Url.Action("Edit", new { id = contact.Id })" class="btn btn-outline-info view-edit-btn" title="Edit in form">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@contact.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete"
                                                    onclick="return confirm('Are you sure you want to delete this contact?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                Total: <span id="totalCount">@Model.Count()</span> contacts |
                Showing: <span id="visibleCount">@Model.Count()</span>
            </small>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No contacts found</h4>
            <p class="text-muted">Start by adding a new contact or uploading a CSV file.</p>
            <div class="mt-3">
                <a asp-action="Create" class="btn btn-success me-2">
                    <i class="fas fa-plus me-1"></i>Add First Contact
                </a>
                <a asp-action="Upload" class="btn btn-primary">
                    <i class="fas fa-upload me-1"></i>Upload CSV File
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/contacts-table.js" asp-append-version="true"></script>
}